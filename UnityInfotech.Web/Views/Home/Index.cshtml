@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div>
        <h1>Hands-on corporate training lab — unityinfotech kochi</h1>
        <p class="lead">Modern, instructor-led training with practical labs, real-world projects and mentorship to accelerate your team's skills.</p>
        <div class="cta">
            <button class="btn">Request a Demo</button>
            <button class="secondary">View Courses</button>
        </div>

        <div class="features" aria-hidden="false">
            <div class="card feature">
                <strong>Practical Labs</strong>
                <h3>Real environments</h3>
                <p style="color:var(--muted);margin-top:6px;font-size:14px">Pre-configured lab setups matching production stacks.</p>
            </div>
            <div class="card feature">
                <strong>Expert Trainers</strong>
                <h3>Industry practitioners</h3>
                <p style="color:var(--muted);margin-top:6px;font-size:14px">Senior engineers who teach best practices and patterns.</p>
            </div>
            <div class="card feature">
                <strong>Flexible Delivery</strong>
                <h3>Onsite & remote</h3>
                <p style="color:var(--muted);margin-top:6px;font-size:14px">Hybrid schedules to suit distributed teams.</p>
            </div>
        </div>
    </div>

    <aside>
        <div class="card">
            <h3 id="about">Upcoming Bootcamp</h3>
            <p style="color:var(--muted)">Full-Stack DevOps — 5 days intensive</p>
            <ul style="padding-left:18px;color:var(--muted)">
                <li>Day 1 - Linux & Cloud basics</li>
                <li>Day 2 - CI/CD pipelines</li>
                <li>Day 3 - Containerization & Kubernetes</li>
                <li>Day 4 - Observability</li>
                <li>Day 5 - Secure deployments</li>
            </ul>
            <div style="margin-top:12px;display:flex;justify-content:space-between;align-items:center">
                <div style="font-weight:700">Seats: Limited</div>
                <button class="btn">Enroll</button>
            </div>
        </div>
        <div style="height:18px"></div>
        <div class="card trainer">
            <div class="avatar">AK</div>
            <div>
                <div style="font-weight:800">Akhil Menon</div>
                <div style="font-size:13px;color:var(--muted)">Senior DevOps Trainer</div>
            </div>
        </div>
    </aside>
</section>

<section class="schedule" id="schedule">
    <div class="card">
        <h3>Why choose our lab?</h3>
        <p style="color:var(--muted)">We provide curated learning paths, sandboxed environments, and follow-up mentorship to ensure skills stick.</p>
        <h4 style="margin-top:12px">What you get</h4>
        <ul style="color:var(--muted);padding-left:18px">
            <li>Per-seat lab access</li>
            <li>Private repo templates</li>
            <li>Certificate of completion</li>
        </ul>
    </div>

    <div class="card" id="contact">
        <h3>Contact & Details</h3>
        <p style="color:var(--muted)">To schedule a corporate workshop or request a custom curriculum:</p>
        <p style="margin:0;font-weight:700">Email: <a href="mailto:training@unityinfotech.co.in">training@unityinfotech.co.in</a></p>
        <p style="margin:4px 0 0 0;font-weight:700">Phone: +91 484 000 0000</p>
        <div style="margin-top:12px">
            <strong>Address</strong>
            <div style="color:var(--muted);font-size:14px">Kochi, Kerala, India</div>
        </div>
    </div>
</section>